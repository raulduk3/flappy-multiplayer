{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/flappy/protocol/v1/runEnd.event.schema.json",
  "title": "runEnd.event",
  "type": "object",
  "properties": {
    "protocol_version": { "const": "1" },
    "type": { "const": "runEnd.event" },
    "payload": {
      "type": "object",
      "properties": {
        "room_id": { "type": "string" },
        "run_id": { "type": "string" },
        "final_distance": { "type": "number", "minimum": 0 },
        "final_score": { "type": "integer", "minimum": 0 },
        "reason": { "type": "string" }
      },
      "required": [
        "room_id",
        "run_id",
        "final_distance",
        "final_score",
        "reason"
      ],
      "additionalProperties": false
    }
  },
  "required": ["protocol_version", "type", "payload"],
  "additionalProperties": false
}
