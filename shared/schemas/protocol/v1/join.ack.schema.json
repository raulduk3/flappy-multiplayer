{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/flappy/protocol/v1/join.ack.schema.json",
  "title": "join.ack",
  "type": "object",
  "properties": {
    "protocol_version": { "const": "1" },
    "type": { "const": "join.ack" },
    "payload": {
      "type": "object",
      "properties": {
        "room_id": { "type": "string" },
        "seed": { "type": "string" },
        "color": { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" }
      },
      "required": ["room_id", "seed", "color"],
      "additionalProperties": false
    }
  },
  "required": ["protocol_version", "type", "payload"],
  "additionalProperties": false
}
