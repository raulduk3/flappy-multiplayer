{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "runStart.event.json",
  "title": "runStart.event",
  "type": "object",
  "properties": {
    "protocol_version": { "const": 1 },
    "type": { "const": "runStart.event" },
    "payload": {
      "type": "object",
      "properties": {
        "room_id": { "type": "string" },
        "run_id": { "type": "string" },
        "tick": { "type": "integer", "minimum": 0 }
      },
      "required": ["room_id", "run_id", "tick"],
      "additionalProperties": false
    }
  },
  "required": ["protocol_version", "type", "payload"],
  "additionalProperties": false
}
